{% extends 'base.html.twig' %}

{% block title %}Admin!{% endblock %}

{% block body %}
<div class="content-area p-5">
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal text-center">Admin Area</h1>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <label for="inputEmail">Email</label>
                    <input type="email"  name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}
                    <button class="btn btn-lg btn-block btn-primary mt-4 " type="submit">
                        Sign in
                    </button>
                </div><!--/col-md-5 -->
            </div><!--/row-->
        </form>
    </div><!--/container -->
</div>
{% endblock %}
